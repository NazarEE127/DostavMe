<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стили для статусов заказов в темной теме -->
    <style name="StatusChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="StatusChip.Success" parent="StatusChip">
        <item name="chipBackgroundColor">@color/success</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StatusChip.Warning" parent="StatusChip">
        <item name="chipBackgroundColor">@color/warning</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="StatusChip.Error" parent="StatusChip">
        <item name="chipBackgroundColor">@color/error</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Стили для карточек заказов в темной теме -->
    <style name="OrderCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/gray_dark</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Стили для кнопок действий в темной теме -->
    <style name="ActionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ActionButton.Primary" parent="ActionButton">
        <item name="backgroundTint">@color/primary_light</item>
    </style>

    <style name="ActionButton.Accent" parent="ActionButton">
        <item name="backgroundTint">@color/accent</item>
    </style>

    <!-- Стили для полей ввода в темной теме -->
    <style name="InputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_light</item>
        <item name="hintTextColor">@color/primary_light</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <!-- Стили для заголовков разделов в темной теме -->
    <style name="SectionHeader" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Стили для цен в темной теме -->
    <style name="PriceText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Стили для адресов в темной теме -->
    <style name="AddressText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!-- Стили для времени в темной теме -->
    <style name="TimeText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Стили для иконок в темной теме -->
    <style name="IconStyle">
        <item name="android:tint">@color/primary_light</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Стили для разделителей в темной теме -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Стили для пустого состояния в темной теме -->
    <style name="EmptyState">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">16dp</item>
    </style>
</resources> 