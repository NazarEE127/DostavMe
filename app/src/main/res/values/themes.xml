<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DostavMe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Акцентные цвета -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Фоновые цвета -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Статусная строка -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        
        <!-- Стили текста -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.DostavMe.Headline</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.DostavMe.Body</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.DostavMe.Subtitle</item>
    </style>

    <style name="Theme.DostavMe" parent="Base.Theme.DostavMe" />
</resources>